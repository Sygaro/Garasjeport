{
  "log_directory": "logs",
  "max_file_size_mb": 10,
  "rotation_days": 14,
  "retention_days": 90,
  "timestamp_format": "%Y-%m-%d %H:%M:%S",
  "log_settings": {
    "garage_controller": {
      "file_enabled": true,
      "file_level": "DEBUG",
      "console_enabled": true,
      "console_level": "DEBUG",
      "format": "plain"
    },
    "system": {
      "file_enabled": true,
      "file_level": "DEBUG",
      "console_enabled": true,
      "console_level": "DEBUG",
      "format": "plain"
    },
    "environment": {
      "file_enabled": true,
      "file_level": "DEBUG",
      "console_enabled": true,
      "console_level": "DEBUG",
      "format": "plain"
    },
    "port_timing": {
      "file_enabled": true,
      "file_level": "DEBUG",
      "console_enabled": true,
      "console_level": "DEBUG",
      "format": "plain"
    },
    "port_activity": {
      "file_enabled": true,
      "file_level": "DEBUG",
      "console_enabled": true,
      "console_level": "DEBUG",
      "format": "plain"
    },
    "port_status": {
      "file_enabled": true,
      "file_level": "DEBUG",
      "console_enabled": true,
      "console_level": "DEBUG",
      "format": "plain"
    },
    "error": {
      "file_enabled": true,
      "file_level": "DEBUG",
      "console_enabled": true,
      "console_level": "DEBUG",
      "format": "plain"
    },
    "api": {
      "file_enabled": true,
      "file_level": "DEBUG",
      "console_enabled": true,
      "console_level": "DEBUG",
      "format": "plain"
    },
    "bootstrap": {
      "file_enabled": true,
      "file_level": "INFO",
      "console_enabled": true,
      "console_level": "DEBUG",
      "format": "plain"
    },
    "console_debug": {
      "file_enabled": false,
      "file_level": "WARNING",
      "console_enabled": true,
      "console_level": "WARNING",
      "format": "plain"
    }
  }
}
