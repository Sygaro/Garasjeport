{
  "log_directory": "logs",
  "max_file_size_mb": 10,
  "rotation_days": 14,
  "retention_days": 90,
  "timestamp_format": "%Y-%m-%d %H:%M:%S",
  "log_settings": {
    
    "garage_controller": {
      "enabled": true,
      "level": "DEBUG",
      "format": "plain",
      "output": [
        "file",
        "console"
      ]
    },
    "system": {
      "enabled": true,
      "level": "DEBUG",
      "format": "plain",
      "output": [
        "file",
        "console"
      ]
    },
    "environment": {
      "enabled": true,
      "level": "warn",
      "format": "plain",
      "output": [
        "file",
        "console"
      ]
    },
    "port_timing": {
      "enabled": true,
      "level": "DEBUG",
      "format": "plain",
      "output": [
        "file",
        "console"
      ]
    },
    "port_activity": {
      "enabled": true,
      "level": "DEBUG",
      "format": "plain",
      "output": [
        "file",
        "console"
      ]
    },
    "port_status": {
      "enabled": true,
      "level": "DEBUG",
      "format": "plain",
      "output": [
        "file",
        "console"
      ]
    },
    "error": {
      "enabled": true,
      "level": "DEBUG",
      "format": "plain",
      "output": [
        "file",
        "console"
      ]
    },
     "api": {
      "enabled": true,
      "level": "DEBUG",
      "format": "plain",
      "output": [
        "file",
        "console"
      ]
    },
    "bootstrap": {
      "enabled": true,
      "level": "DEBUG",
      "format": "plain",
      "output": [
        "file",
        "console"
      ]
    },
    "console_debug": {
      "enabled": true,
      "level": "DEBUG",
      "format": "plain",
      "output": [
        "console"
      ]
    }
  }
}